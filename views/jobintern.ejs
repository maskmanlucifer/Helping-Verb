              <div class="forma">
                <form action="/jobinternfilter" method="POST" class="hi">
                    <input(type="hidden", name="_method", value="PUT")>
                    <input type="number" name="batch" id="cd" placeholder="   Enter batch"min="1999" max="2020" required>
                    <input type="hidden" name="type" value="<%=page%>">
                    <input type="submit" value="Search" id="bn">
                </form>
            </div><!-- forma -->
            <%if(data.length==0){%>
               <div class="pic">
                 <img src="/img/error-3.jpg" alt="1st" style="width:90%;margin-left: 5%;min-height: 80%;margin-bottom: 3%;border-radius: 15px;">
               </div>
            <%}else{%>
              
               <div class="container" style="margin-top: 25px; margin-bottom: 25px;">
                <%for(let i=0;i<data.length;i+=4){%>
                  <div class="row">
                    <%for(let j=i;j<Math.min(i+4,data.length);j++){%>
                    <div class="col-md-3 col-sm-6">
                      <div class="card">
                          <%if(page=="job"){%>
                          <img src="https://avatars.dicebear.com/api/bottts/<%=data[j].name%>.svg" alt="1st" style="width:100%;">
                          <%}else{%>
                            <img src="https://avatars.dicebear.com/api/gridy/<%=data[j].name%>.svg" alt="1st" style="width:100%;">
                          <%}%>

                          <h3 style="padding-top:5px;"><%=data[j].name%></h3>
                          <%if(page=="job"){%>
                            <%for(let k=0;k<data[j].jobs.length;k++){%>
                              <span style="padding-left: 2%;padding-right: 2%;"><a style="border-radius:5px;text-decoration: none; color: grey; background-color: yellow;padding-left: 4%;padding-right: 4%;padding-top: 1%;padding-bottom: 1%;font-size: 17px;"><%=data[j].jobs[k]%></a></span>
                            <%}%>
                            <%for(let k=0;k<Math.max(0,5-data[j].jobs.length);k++){%>
                              <span style="padding-left: 2%;padding-right: 2%;"><a style="text-decoration: none; padding-left: 4%;padding-right: 4%;padding-top: 1%;padding-bottom: 1%;font-size: 17px;"></a></span>
                            <%}%>
                          <%} else {%>
                            <%for(let k=0;k<data[j].interns.length;k++){%>
                              <span style="padding-left: 2%;padding-right: 2%;"><a style="border-radius:5px;text-decoration: none; color: grey; background-color: yellow;padding-left: 4%;padding-right: 4%;padding-top: 1%;padding-bottom: 1%;font-size: 17px;"><%=data[j].interns[k]%></a></span>
                            <%}%>
                            <%for(let k=0;k<Math.max(0,5-data[j].interns.length);k++){%>
                              <span style="padding-left: 2%;padding-right: 2%;"><a style="text-decoration: none; padding-left: 4%;padding-right: 4%;padding-top: 1%;padding-bottom: 1%;font-size: 17px;"></a></span>
                            <%}%>
                          <%}%>
                          <div class="icons">
                            <a href="<%=data[j].glink%>"><i class="fa fa-github"></i></a> 
                            <a href="<%=data[j].clink%>"><i class="fa fa-link" ></i></a> 
                          </div><!-- icons -->
                    </div><!-- card -->
                    </div><!-- col-md-3 col-sm-6 -->
                    <%}%><!-- for j -->
                  </div><!-- row -->
                <%}%><!-- for i-->
               </div><!-- container -->
            <%}%><!-- else -->
